<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_onboarding_dialog_bottom_sheet_white_radius_top_12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/onboarding_second_bottom_sheet_birth_year"
            android:textAppearance="@style/title1"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/iv_onboarding_second_bottom_sheet_cancel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_onboarding_second_bottom_sheet_cancel" />

        <ImageView
            android:id="@+id/iv_onboarding_second_bottom_sheet_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:src="@drawable/ic_onboarding_cancel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/bg_onboarding_dialog_bottom_sheet_primary_20_radius_12dp"
            app:layout_constraintBottom_toBottomOf="@id/np_onboarding_second_bottom_sheet_birth_year"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/np_onboarding_second_bottom_sheet_birth_year" />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="0dp"
            android:layout_marginEnd="60dp"
            android:src="@drawable/ic_onboarding_second_selected"
            app:layout_constraintBottom_toBottomOf="@id/np_onboarding_second_bottom_sheet_birth_year"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/np_onboarding_second_bottom_sheet_birth_year" />

        <NumberPicker
            android:id="@+id/np_onboarding_second_bottom_sheet_birth_year"
            style="@style/NumberPicker"
            android:layout_width="90dp"
            android:layout_height="112dp"
            android:divider="@android:color/transparent"
            android:selectionDividerHeight="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_onboarding_second_bottom_sheet_cancel" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_onboarding_second_bottom_sheet_complete"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_onboarding_dialog_bottom_sheet_primary_100_radius_12dp"
            android:text="@string/onboarding_second_bottom_sheet_complete"
            android:textAppearance="@style/title1"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/np_onboarding_second_bottom_sheet_birth_year" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>