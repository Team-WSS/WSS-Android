<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_50_F4F5F8"
            android:paddingBottom="8dp">

            <LinearLayout
                android:id="@+id/ll_novel_intro"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingBottom="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_novel_intro_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="46dp"
                    android:text="@string/novel_info_title"
                    android:textAppearance="@style/title1" />

                <TextView
                    android:id="@+id/tv_novel_intro_body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:maxLines="3"
                    android:text="@string/novel_info_body"
                    android:textAppearance="@style/body2"
                    android:textColor="@color/gray_300_52515F" />

                <TextView
                    android:id="@+id/tv_novel_intro_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/novel_info_more"
                    android:textAppearance="@style/body2"
                    android:textColor="@color/gray_200_AEADB3"
                    tools:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_novel_platforms"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingHorizontal="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_novel_intro">

                <TextView
                    android:id="@+id/tv_novel_info_platforms_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="32dp"
                    android:text="@string/novel_info_platforms_title"
                    android:textAppearance="@style/title1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="54dp">

                    <ImageView
                        android:id="@+id/iv_novel_info_naver"
                        android:layout_width="46dp"
                        android:layout_height="48dp"
                        android:layout_marginHorizontal="8dp"
                        android:src="@drawable/btn_novel_info_naver"
                        tools:visibility="visible" />

                    <ImageView
                        android:id="@+id/iv_novel_info_kakao"
                        android:layout_width="46dp"
                        android:layout_height="48dp"
                        android:layout_marginHorizontal="8dp"
                        android:src="@drawable/btn_novel_info_kakao"
                        tools:visibility="visible" />

                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>