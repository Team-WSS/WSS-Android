<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_onboarding_item_genre_image"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="13dp"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_novel_detail_genre_test" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="20dp"
        android:textAppearance="@style/title3"
        android:textColor="@color/gray_300_52515F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/iv_onboarding_item_genre_image"
        app:layout_constraintStart_toStartOf="@id/iv_onboarding_item_genre_image"
        app:layout_constraintTop_toBottomOf="@id/iv_onboarding_item_genre_image"
        tools:text="로멘스" />

</androidx.constraintlayout.widget.ConstraintLayout>