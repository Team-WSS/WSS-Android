<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="novelDetailViewModel"
            type="com.teamwss.websoso.ui.novelDetail.NovelDetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="644dp"
            android:scaleType="centerCrop"
            app:blurRadius="@{40}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:loadImageUrl="@{novelDetailViewModel.profileImgUrl}" />

        <View
            android:id="@+id/view_novel_detail_cover_background"
            android:layout_width="0dp"
            android:layout_height="248dp"
            android:background="@drawable/bg_novel_detail_cover_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="0dp"
            android:layout_height="396dp"
            android:background="@color/gray_50_F4F5F8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_novel_detail_cover_background" />

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/cl_novel_detail"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/abl_novel_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:id="@+id/ctl_novel_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:contentScrim="@color/white"
                    app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_novel_detail_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="68dp">

                        <ImageView
                            android:id="@+id/iv_novel_detail_cover"
                            android:layout_width="0dp"
                            android:layout_height="217dp"
                            android:layout_marginHorizontal="108dp"
                            android:scaleType="fitCenter"
                            app:cornerRadius="@{30f}"
                            app:layout_constraintDimensionRatio="144:200"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:loadImageUrl="@{novelDetailViewModel.profileImgUrl}" />

                        <ImageView
                            android:id="@+id/iv_novel_detail_cover_genre"
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:scaleType="fitXY"
                            app:layout_constraintBottom_toBottomOf="@id/iv_novel_detail_cover"
                            app:layout_constraintEnd_toEndOf="@id/iv_novel_detail_cover"
                            app:loadImageUrl="@{novelDetailViewModel.genreImgUrl}" />

                        <TextView
                            android:id="@+id/tv_novel_detail_title"
                            android:layout_width="335dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:maxLines="4"
                            android:textAlignment="center"
                            android:textAppearance="@style/headline1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/iv_novel_detail_cover"
                            tools:text="철혈검가 사냥개의 회귀" />

                        <TextView
                            android:id="@+id/tv_novel_detail_character_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:textAppearance="@style/body2"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_novel_detail_title"
                            tools:text="로판/로맨스 ・ 완결작 ・ 이보라" />

                        <LinearLayout
                            android:id="@+id/ll_novel_detail_numeric_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:gravity="center_vertical"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_novel_detail_character_info">

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_novel_detail_interest" />

                            <TextView
                                android:id="@+id/tv_novel_detail_interest_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:textAppearance="@style/body3"
                                android:textColor="@color/gray_300_52515F"
                                tools:text="0" />

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:src="@drawable/ic_novel_detail_rating" />

                            <TextView
                                android:id="@+id/tv_novel_detail_rating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:textAppearance="@style/body3"
                                android:textColor="@color/gray_300_52515F"
                                tools:text="0.0 (0)" />

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:src="@drawable/ic_novel_detail_feed" />

                            <TextView
                                android:id="@+id/tv_novel_detail_feed_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:textAppearance="@style/body3"
                                android:textColor="@color/gray_300_52515F"
                                tools:text="0" />

                        </LinearLayout>

                        <View
                            android:id="@+id/view_novel_detail_rating"
                            android:layout_width="0dp"
                            android:layout_height="68dp"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="24dp"
                            android:background="@drawable/bg_novel_detail_white_radius_15dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/ll_novel_detail_numeric_info" />

                        <RatingBar
                            android:id="@+id/rb_novel_detail_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:numStars="5"
                            android:progressBackgroundTint="@color/gray_70_DFDFE3"
                            android:progressTint="@color/secondary_100_FF675D"
                            android:secondaryProgressTint="@color/secondary_100_FF675D"
                            android:stepSize="0.5"
                            app:layout_constraintBottom_toBottomOf="@id/view_novel_detail_rating"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@id/view_novel_detail_rating"
                            tools:rating="2.5" />

                        <LinearLayout
                            android:id="@+id/ll_novel_detail_interest_and_review"
                            android:layout_width="0dp"
                            android:layout_height="42dp"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="16dp"
                            android:background="@drawable/bg_novel_detail_white_radius_10dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/view_novel_detail_rating">

                            <LinearLayout
                                android:id="@+id/view_novel_detail_interest"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="14dp"
                                    android:src="@drawable/ic_novel_detail_interest" />

                                <TextView
                                    android:id="@+id/tv_novel_detail_interest"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:text="@string/novel_detail_interest"
                                    android:textAppearance="@style/body3"
                                    android:textColor="@color/gray_300_52515F" />
                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:background="@color/gray_70_DFDFE3" />

                            <LinearLayout
                                android:id="@+id/view_novel_detail_review"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_novel_detail_review" />

                                <TextView
                                    android:id="@+id/tv_novel_detail_review"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:text="@string/novel_detail_review"
                                    android:textAppearance="@style/body3"
                                    android:textColor="@color/gray_300_52515F" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/tb_novel_detail"
                        android:layout_width="match_parent"
                        android:layout_height="68dp"
                        android:elevation="0dp"
                        app:contentInsetStart="0dp"
                        app:layout_collapseMode="pin">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/ll_novel_appbar"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginTop="24dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/iv_novel_detail_navigate_back"
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                android:layout_marginStart="6dp"
                                android:paddingHorizontal="16dp"
                                android:paddingVertical="14dp"
                                android:src="@drawable/ic_novel_detail_navigate_back"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:id="@+id/iv_novel_detail_menu"
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:layout_marginEnd="12dp"
                                android:onClick="@{() -> novelDetailViewModel.onClickNovelDetailMenu()}"
                                android:padding="10dp"
                                android:src="@drawable/ic_novel_detail_menu"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.appcompat.widget.Toolbar>
                </com.google.android.material.appbar.CollapsingToolbarLayout>

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tl_novel_detail"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    app:layout_scrollFlags="scroll|enterAlways"
                    app:tabIndicatorColor="@color/black"
                    app:tabIndicatorHeight="2dp"
                    app:tabSelectedTextColor="@color/black"
                    app:tabTextAppearance="@style/title2"
                    app:tabTextColor="@color/gray_200_AEADB3">

                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/ti_novel_detail_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/novel_detail_info" />

                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/ti_novel_detail_feed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/novel_detail_feed" />
                </com.google.android.material.tabs.TabLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_70_DFDFE3"
                    android:minHeight="-54dp"
                    app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
                    app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed" />

            </com.google.android.material.appbar.AppBarLayout>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/vp_novel_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>