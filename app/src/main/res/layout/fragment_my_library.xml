<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_my_library_storage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="30dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_my_library_storage_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_library_storage"
                android:textAppearance="@style/title1"
                android:textColor="@color/black"
                android:layout_marginTop="24dp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <ImageView
                android:id="@+id/iv_my_library_go_to_storage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_my_library_navigate_right"
                android:layout_marginEnd="20dp"
                android:padding="10dp"
                app:layout_constraintTop_toTopOf="@id/tv_my_library_storage_title"
                app:layout_constraintBottom_toBottomOf="@id/tv_my_library_storage_title"
                app:layout_constraintEnd_toEndOf="parent"/>

            <LinearLayout
                android:id="@+id/linear_my_library_storage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/bg_my_library_gray50_radius_14dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:paddingVertical="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_my_library_storage_title">

                <LinearLayout
                    android:id="@+id/linear_my_library_storage_interesting"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_my_linear_storage_interesting_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@{}"
                        android:textAppearance="@style/title2"
                        android:textColor="@color/black"
                        tools:text="12"/>

                    <TextView
                        android:id="@+id/tv_my_linear_storage_interesting_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/my_library_interesting"
                        android:textAppearance="@style/body5"
                        android:textColor="@color/black"
                        android:layout_marginTop="2dp"/>

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="38dp"
                    android:background="@color/gray_70_DFDFE3"/>

                <LinearLayout
                    android:id="@+id/linear_my_library_storage_watching"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_my_linear_storage_watching_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@{}"
                        android:textAppearance="@style/title2"
                        android:textColor="@color/black"
                        tools:text="12"/>

                    <TextView
                        android:id="@+id/tv_my_linear_storage_watching_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/my_library_watching"
                        android:textAppearance="@style/body5"
                        android:textColor="@color/black"
                        android:layout_marginTop="2dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_my_library_storage_watched"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_my_linear_storage_watched_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@{}"
                        android:textAppearance="@style/title2"
                        android:textColor="@color/black"
                        tools:text="12"/>

                    <TextView
                        android:id="@+id/tv_my_linear_storage_watched_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/my_library_watched"
                        android:textAppearance="@style/body5"
                        android:textColor="@color/black"
                        android:layout_marginTop="2dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_my_library_storage_quit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_my_linear_storage_quit_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@{}"
                        android:textAppearance="@style/title2"
                        android:textColor="@color/black"
                        tools:text="12"/>

                    <TextView
                        android:id="@+id/tv_my_linear_storage_quit_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/my_library_quite"
                        android:textAppearance="@style/body5"
                        android:textColor="@color/black"
                        android:layout_marginTop="2dp"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/gray_50_F4F5F8"
            app:layout_constraintTop_toBottomOf="@id/cl_my_library_storage"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_my_library_unknown_preference"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/cl_my_library_storage">

            <TextView
                android:id="@+id/tv_my_library_preference_analysis_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_library_preference_analysis"
                android:textAppearance="@style/title1"
                android:textColor="@color/black"
                android:layout_marginTop="24dp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <ImageView
                android:id="@+id/iv_my_library_unknown_preference_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_empty_cat"
                android:layout_marginTop="36dp"
                app:layout_constraintTop_toBottomOf="@id/tv_my_library_preference_analysis_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_my_library_unknown_preference_instructions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_library_unknown_preference"
                android:textAppearance="@style/body2"
                android:textColor="@color/gray_200_AEADB3"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/iv_my_library_unknown_preference_logo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>