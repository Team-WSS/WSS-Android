<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="novelStorage"
            type="com.teamwss.websoso.data.model.MyLibraryStorageData"/>

        <import type="com.teamwss.websoso.util.BindingAdapter"/>
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".ui.my-page.feed.MyFeedFragemnt">

            <TextView
                android:id="@+id/tv_storage_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:text="보관함"
                android:textAppearance="@style/title1"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/linear_my_page_storage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_gray50_radius_14"
                android:orientation="horizontal"
                android:paddingTop="16dp"
                android:paddingBottom="20dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_storage_title">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_storage_interesting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_storage_interesting_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{novelStorage.interestingNovel}"
                        android:textAppearance="@style/title2"
                        android:textColor="@color/black"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="0" />

                    <TextView
                        android:id="@+id/tv_storage_interesting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="관심"
                        android:textAppearance="@style/body3"
                        android:textColor="@color/black"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_storage_interesting_count" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_storage_watching"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_storage_watching_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{novelStorage.watchingNovel}"
                        android:textAppearance="@style/title2"
                        android:textColor="@color/black"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="0" />

                    <TextView
                        android:id="@+id/tv_storage_watching"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="보는중"
                        android:textAppearance="@style/body3"
                        android:textColor="@color/black"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_storage_watching_count" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_storage_watched"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_storage_watched_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{novelStorage.watchedNovel}"
                        android:textAppearance="@style/title2"
                        android:textColor="@color/black"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="0" />

                    <TextView
                        android:id="@+id/tv_storage_done"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="봤어요"
                        android:textAppearance="@style/body3"
                        android:textColor="@color/black"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_storage_watched_count" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_storage_quitting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_storage_quitting_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{novelStorage.quitNovel}"
                        android:textAppearance="@style/title2"
                        android:textColor="@color/black"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="0" />

                    <TextView
                        android:id="@+id/tv_storage_quitting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="하차"
                        android:textAppearance="@style/body3"
                        android:textColor="@color/black"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_storage_quitting_count" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <View
                android:id="@+id/view_between_storage_and_preference"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="32dp"
                android:background="@color/gray_50_F4F5F8"
                app:layout_constraintTop_toBottomOf="@id/linear_my_page_storage" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_genre_preference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/view_between_storage_and_preference">

                <TextView
                    android:id="@+id/tv_preferred_genre_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="장르 취향"
                    android:textAppearance="@style/title1"
                    android:textColor="@color/black"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <LinearLayout
                    android:id="@+id/linear_preferred_genre_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_preferred_genre_title"
                    android:orientation="horizontal">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_preferred_genre_first"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv_preferred_genre_first"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_novel_detail_genre_test"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <TextView
                            android:id="@+id/tv_preferred_genre_first"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="로판"
                            android:textAppearance="@style/title3"
                            android:layout_marginTop="12dp"
                            app:layout_constraintTop_toBottomOf="@id/iv_preferred_genre_first"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <TextView
                            android:id="@+id/tv_preferred_genre_first_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5편"
                            android:textAppearance="@style/body5"
                            android:textColor="@color/gray_200_AEADB3"
                            android:layout_marginTop="2dp"
                            app:layout_constraintTop_toBottomOf="@id/tv_preferred_genre_first"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_preferred_genre_second"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv_preferred_genre_second"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_novel_detail_genre_test"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <TextView
                            android:id="@+id/tv_preferred_genre_second"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="로판"
                            android:textAppearance="@style/title3"
                            android:layout_marginTop="12dp"
                            app:layout_constraintTop_toBottomOf="@id/iv_preferred_genre_second"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <TextView
                            android:id="@+id/tv_preferred_genre_second_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5편"
                            android:textAppearance="@style/body5"
                            android:textColor="@color/gray_200_AEADB3"
                            android:layout_marginTop="2dp"
                            app:layout_constraintTop_toBottomOf="@id/tv_preferred_genre_second"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_preferred_genre_third"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv_preferred_genre_third"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_novel_detail_genre_test"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <TextView
                            android:id="@+id/tv_preferred_genre_third"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="로판"
                            android:textAppearance="@style/title3"
                            android:layout_marginTop="12dp"
                            app:layout_constraintTop_toBottomOf="@id/iv_preferred_genre_third"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <TextView
                            android:id="@+id/tv_preferred_genre_third_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5편"
                            android:textAppearance="@style/body5"
                            android:textColor="@color/gray_200_AEADB3"
                            android:layout_marginTop="2dp"
                            app:layout_constraintTop_toBottomOf="@id/tv_preferred_genre_third"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

                <ListView
                    android:id="@+id/list_preferred_genre_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:divider="@null"
                    android:layout_marginTop="32dp"
                    android:layout_marginHorizontal="40dp"
                    app:layout_constraintTop_toBottomOf="@id/linear_preferred_genre_top"/>

                <ImageView
                    android:id="@+id/iv_preferred_genre_path"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_lower_path"
                    android:layout_marginTop="24dp"
                    android:padding="8dp"
                    app:layout_constraintTop_toBottomOf="@id/list_preferred_genre_bottom"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/view_between_genre_and_novel"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/gray_50_F4F5F8"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/cl_genre_preference"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_preferred_novel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/view_between_genre_and_novel">

                <TextView
                    android:id="@+id/tv_preferred_novel_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="작품 취향"
                    android:textAppearance="@style/title1"
                    android:textColor="@color/black"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_attractive_points"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/bg_my_library_gray50_radius_12dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="12dp"
                    android:paddingVertical="20dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_preferred_novel_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/tv_attractive_points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_300_52515F"
                        android:textAppearance="@style/title2"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:text="캐릭터,소재가 매력적인 작품"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.teamwss.websoso.ui.common.customView.WebsosoChipGroup
                    android:id="@+id/cg_attractive_points"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginHorizontal="20dp"
                    app:layout_constraintTop_toBottomOf="@id/cl_attractive_points">

                </com.teamwss.websoso.ui.common.customView.WebsosoChipGroup>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>