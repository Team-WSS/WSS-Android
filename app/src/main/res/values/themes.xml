<resources>

    <style name="Base.Theme.Websoso" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.Websoso" parent="Base.Theme.Websoso" />

    <style name="PopupMenu" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="DateNumberPicker">
        <item name="android:textAppearance">@style/body2</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="WebsosoBottomSheetTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:colorBackground">@color/transparent</item>
    </style>

</resources>